@model IEnumerable<AmethystScreen.Models.Movie>
@{
    ViewData["Title"] = "Library";
}

<style>
        .card-body {
            background-color: blueviolet;
            color: black;
        }

        .card-title {
            font-size: 1.3rem;

        }

        .card-img-top {
            object-fit: cover;
            border: 2px solid blueviolet;
        }

        #search-bar {
            border: 1px solid blueviolet;
        }
</style>

<div class="align-content-center">
    <form asp-action="SearchResult" class="mb-3">
        <div class="input-group">
            <input type="search" class="form-control search-bar bg-black text-light rounded-start-pill" id="search-bar" name="SearchTitle" placeholder="Search Title" />
            <input type="submit" value="Search" class="btn text-dark rounded-start-pill" id="search-btn" />
        </div>
    </form>
</div>

<hr />

<div class="main-body w-100 h-100 g-1">
    <div class="row row-cols-2 row-cols-md-3 row-cols-lg-4 g-2">
        @if (Model.Count() > 0)
        {
            @foreach (var movie in Model)
            {
            <div class="col g-2 d-flex justify-content-around align-items-center">
                <div class="card">
                    <a asp-action="Movie" asp-route-id="@movie.Id">
                        <img src="@movie.Image" class="card-img-top" alt="@movie.Title">
                        <div class="card-body rounded-bottom lato-bold d-flex w-100 justify-content-around">
                            <p class="card-title">@movie.Title</p>
                        </div>
                    </a>
                </div>
            </div>
            }
        }
        else
        {
        <div class="w-100">
            <p class="text-center fs-2">Sorry! No Movies were found...</p>
        </div>
        }
    </div>
</div>