@model IEnumerable<AmethystScreen.Models.Movie>
@{
    ViewData["Title"] = "Library";
}

<div class="align-content-center">
    <form asp-action="SearchResult" class="mb-3">
        <div class="input-group">
            <input type="search" class="form-control search-bar bg-black text-light border border-secondary rounded-start-pill" name="SearchTitle" placeholder="Search Title" />
            <input type="submit" value="Search" class="btn text-dark rounded-start-pill" id="search-btn" />
        </div>
    </form>
</div>

<hr />

<div class="main-body w-100 h-100">
    <div class="row justify-content-around">
        @if (Model.Count() > 0)
        {
            @foreach (var movie in Model)
            {
            <div class="col">
                <div class="card card-hover-effect">
                    <a asp-action="Movie" asp-route-id="@movie.Id">
                        <img src="@movie.Image" class="card-img-top" alt="@movie.Title">
                        <div class="card-body">
                            <h4 class="card-title">@movie.Title</h4>
                        </div>
                    </a>
                </div>
            </div>
            }
        }
        else
        {
            <div class="w-100">
                <p class="text-center fs-2">Sorry! No Movies were found...</p>
            </div>
        }
    </div>
</div>

<div>
    <a asp-action="Index">Back to Library</a>
</div>
