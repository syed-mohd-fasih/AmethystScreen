@model AmethystScreen.ViewModels.ModeratorDashboard
@{
    ViewData["Title"] = "Mod Dashboard";
}

<h2>Moderator Dashboard</h2>

<h3>User Management</h3>
@if (Model.Users.Any())
{
    <table>
        <thead>
            <tr>
                <th>Username</th>
                <th>Email</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model.Users)
            {
                <tr>
                    <td>@user.UserName</td>
                    <td>@user.Email</td>
                    <td>
                        <a asp-action="ManageUser" asp-route-userId="@user.Id">Manage</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>There are no active users here yet :(</p>
}

<h3>Reported Content</h3>
@if (Model.ReportedContent.Any())
{
    <table>
        <thead>
            <tr>
                <th>Content ID</th>
                <th>Reported By</th>
                <th>Reason</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var report in Model.ReportedContent)
            {
                <tr>
                    <td>@report.Id</td>
                    <td>@report.ReportedByUserId</td>
                    <td>@report.Description</td>
                    <td>
                        <a asp-action="ReviewReport" asp-route-id="@report.Id">Review</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>There is no reported content today :D</p>
}

<h3>Recent Activity</h3>
@if (Model.RecentActivity.Any())
{
    <ul>
        @foreach (var activity in Model.RecentActivity)
        {
            <li>@activity.Content</li>
            <li>
                <a asp-action="ReviewActivity" asp-route-id="@activity.Id">Review</a>
            </li>
        }
    </ul>
}
else
{
    <p>There is no logged activity :\</p>
}

<h3>Feedbacks</h3>
@if (Model.Feedbacks.Any())
{
    <ul>
        @foreach (var feedback in Model.Feedbacks)
        {
            <li>@feedback.Description</li>
            <li>
                <a asp-action="ReviewFeedback" asp-route-id="@feedback.Id">Review</a>
            </li>
        }
    </ul>
}
else
{
    <p>There are no feedbacks to review yet...</p>
}
